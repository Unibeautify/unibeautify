{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es2016",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017.object",
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "scripts/**/*",
    "src/**/*",
    "test/**/*"
  ]
}
