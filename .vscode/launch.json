    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run AVA Tests",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/ava/cli.js",
            "args": [
                "--verbose",
                "${workspaceFolder}/dist/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
            "protocol": "inspector"
        }
    ]
}